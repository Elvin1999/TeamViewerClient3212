<Window x:Class="TeamViewerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamViewerClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock FontSize="30">IP</TextBlock>
            <TextBox x:Name="IpTxtbox" Text="10.2.22.1" FontSize="30"></TextBox>
            <TextBlock FontSize="30">Port</TextBlock>
            <TextBox Text="27001" Name="PortTxtbox" FontSize="30"></TextBox>
            <Button Click="Button_Click" FontSize="25">Connect</Button>
            <Button Click="Button_Click_1" FontSize="25">Disconnect</Button>
        </StackPanel>
    </Grid>
</Window>
